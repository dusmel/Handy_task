<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.dusmel.handy_services.LoginHandymen">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAL"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D35400"
        android:title="HandyService"
        app:popupTheme="@style/Mytheme" >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/back"
            android:onClick="handyLoginback"
            android:background="#D35400"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/jDtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="HandyMan Service"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/loginLogo"
                android:src="@drawable/the_handyman_logo"
                />






        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/HtxtUsername"
            android:hint="username"
            android:paddingLeft="9dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#D35400"
            android:drawablePadding="18dp"
            android:drawableLeft="@drawable/user2"
            android:drawableTint="#D35400"
            android:background="@drawable/bordershadow1"
            android:textColorHint="#D35400"
            android:layout_marginBottom="12dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/HtxtPass"
            android:hint="password"
            android:paddingLeft="9dp"
            android:paddingTop="5dp"
            android:drawablePadding="18dp"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/pass2"
            android:drawableTint="#D35400"
            android:textColor="#F2F3F4"
            android:background="@drawable/bg"
            android:textColorHint="#D35400"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnlogIn"
                android:background="@drawable/borderbtnvalid"
                android:layout_marginRight="10dp"
                android:textColor="#F8F9F9"
                android:onClick="loginHandy"
                android:text="log in"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnsignUp"
                android:background="@drawable/borderbtnvalid"
                android:layout_marginLeft="10dp"
                android:textColor="#F8F9F9"
                android:onClick="btnReg"
                android:layout_toRightOf="@id/btnlogIn"
                android:text="sign up"/>

        </RelativeLayout>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#F2F3F4"
        android:tint="#D35400"
        android:onClick="openAdminLogin"
        app:srcCompat="@drawable/admin" />


</LinearLayout>
