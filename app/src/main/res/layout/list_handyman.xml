<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F3F4"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="64dp"
            android:src="@drawable/profle"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:id="@+id/Handypfl"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/handyNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Handypfl"
            android:textColor="#232222"
            android:text="@string/names"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/handyField"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/Handypfl"
            android:layout_below="@id/handyNames"
            android:text="@string/fields"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/handyField"
            android:layout_toRightOf="@id/Handypfl"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/handyAdd"
                android:text="Address"
                android:textColor="#F78A39"
                android:layout_below="@id/handyField"
                android:layout_toRightOf="@id/Handypfl"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/handyprice"
                android:text="Price"
                android:layout_below="@id/handyField"
                android:layout_toRightOf="@id/handyAdd"
                android:layout_weight="1"
                android:textColor="#F78A39"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/handysuccess"
                android:text="success rate"
                android:layout_below="@id/handyField"
                android:layout_toRightOf="@id/handyprice"
                android:textColor="#F78A39"
                android:layout_weight="1"/>

        </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>











</LinearLayout>